<div class='flex-row justify-center items-center'>
  <div class='bg-gray-700 p-6 m-3 w-9/12 rounded-sm shadow-xl'>
    <h2 class='text-3xl mb-3 text-5'>
      <a href='/post/{{id}}'>{{title}}</a>
    </h2>
    <p class='mb-3'>{{content}}</p>
    <p class='text-sm'>Created by
      {{user.name}}
      on
      {{format_date date_created}}
    </p>
  </div>
  <div>
    <p>
      {{description}}
    </p>
  </div>
</div>
<br/>
{{#each comments as |post|}}
  <div class='flex-row justify-center items-center'>
    <div class='bg-gray-300 p-6 m-3 w-9/12 rounded-sm shadow-xl text-black'>
      <p>{{post.comment}}</p>
      <p class='text-sm'>Created by
        {{post.user.name}}
        on
        {{format_date post.date_created}}
      </p>
    </div>
  </div>
{{/each}}
{{#if logged_in}}
<div>
    UR LOGGED IN
</div>
{{/if}}